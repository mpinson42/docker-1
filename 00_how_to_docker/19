docker run --name Abathur -v ~/Abathur:/root -p 3000:3000 -ti -d -e FLASK_APP=/root/hello.py python:2-slim && docker exec Abathur pip install Flask && docker exec -t Abathur sh -c "echo \"from flask import Flask\napp = Flask(__name__)\n\n@app.route('/')\ndef index():\n\treturn '<h1>Hello World</h1>' \" > /root/hello.py" && docker exec Abathur flask run --host=0.0.0.0 --port=3000
